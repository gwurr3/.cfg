#
## common hotkeys
#

super + shift + Return
	run_terminal

super + shift + s
	run_scratchpad

super + p
	dmenu_run -i -p "Run command:" \
	-nf "$DMENU_NF" -nb "$DMENU_NB" \
	-sf "$DMENU_SF" -sb "$DMENU_SB" \
	-fn "$DMENU_FN"

#
## bspwm stuff
#

# refresh or quit bspwm
super + {_,shift + }q
	pkill -USR1 -x sxhkd ;\
	pkill -x barpipe ;\
	{bspc wm -d > "$BSPWM_STATE" && bspc quit ,\
	pkill -x barpipe ;\
	pkill -x bottombar ;\
	bspc quit 1}

# close and kill
super + shift + {c,x}
	bspc node -{c,k}

# alternate layouts
super + space
	bspc desktop -l next

# swap the current node and the biggest node
super + Return
	bspc node -s biggest.local

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

#
## state/flags
#

# set the window state
super + {t,shift + t}
	bspc node -t {tiled,pseudo_tiled}

super + {f,shift + f}
	bspc node -t {fullscreen,floating}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}


#
## focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

alt + {_,shift +} Tab
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {_,shift +} bracket{left,right}
	bspc {desktop -f,node -d} {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
## focus/swap monitors
#
super + {comma,period}
    bspc monitor -f {prev,next}
 
super + {shift,alt} + {comma,period}
    bspc {node,desktop} -m {prev,next}



#
## preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

#
## move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
alt + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
super + {Left,Down,Up,Right}
	bspc node -v {-70 0,0 70,0 -70,70 0}

#
## rename/create/destroy desktops
#

# create/focus desktop or rename currnet with ctrl
super + {_,shift} + d
	bsp_{_,re}name_desktop

# destroy current desktop
super + alt + d
	bspc desktop focused -r

#
## misc non-wm related things
#

XF86Audio{Prev,Next,Play,LowerVolume,RaiseVolume,Mute}
	audioctl {prev,next,toggle,down,up,mute}

XF86MonBrightness{Up,Down}
	xbacklight {-inc,-dec} 10%
